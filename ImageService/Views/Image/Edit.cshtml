@model ImageService.Models.Image
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="edit" asp-controller="image" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Id" class="control-label">Номер изображения</label>
        <input type="text" asp-for="@Model.Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdProduct" class="control-label">Номер продукта</label>
        <input type="text" asp-for="@Model.ProductId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Url" class="control-label">Адрес изображения</label>
        <input type="text" asp-for="@Model.Url" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
