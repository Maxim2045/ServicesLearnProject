
@model ImageService.Models.Image
@{
    ViewBag.Title = "Удаление изображения";
}

<div>
    <dl class="dl-horizontal">
        <dt>Номер изображения</dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>Номер продукта</dt>
        <dd>
            @Html.DisplayFor(model => model.ProductId)
        </dd>
    </dl>

    <div>
        <form asp-controller="Image" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
