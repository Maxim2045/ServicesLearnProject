
@model ImageService.Models.Image
@{
    ViewBag.Title = "Добавление изображения";
}
<form asp-action="create" asp-controller="image">
    <div class="form-group">
        <label asp-for="Id" class="control-label">Номер изображения</label>
        <input type="text" asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductId" class="control-label">Номер продукта</label>
        <input type="text" asp-for="IdProduct" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Url" class="control-label">Адрес</label>
        <input type="text" asp-for="Url" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>
